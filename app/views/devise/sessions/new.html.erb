<div class="box">
  <div class="box-inner">

    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <h1>ログイン</h1>
      <div class="box-username">
        <%= f.label :name, "ユーザー名" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード" %>
          </div>
          <div class="column-right">
            <%= link_to "パスワードを忘れた場合", new_user_password_path %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember, "ログインしたままにする" %>
        </div>
      <% end %>
      <div class="box-login">
        <%= f.submit "ログイン" %>
        <div class="legal-text">
          続行することで、LinkHubの
          <%= link_to "利用規約", "#" %>
          および
          <%= link_to "プライバシー規約", "#" %>

          <%#==================================%>
          <button type="button" class="text" data-toggle="modal" data-target="#exampleModal" data-backdrop="static">利用規約</button>

          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">利用規約</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                  </button>
                </div>
                <div class="modal-body">
                  <%= render "layouts/terms" %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>


          <!--button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-backdrop="true" data-whatever="@fat">プライバシー規約</button-->
          <%#==================================%>

          に同意するものとみなされます。
        </div>
      </div>
    <% end %>
  </div>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <!--以下１行を編集-->
      <%= link_to "#{OmniAuth::Utils.camelize(provider.match(/[a-z]+/))}アカウントでログイン", omniauth_authorize_path(resource_name, provider),class:"fab fa-#{provider.match(/[a-z]+/)}", method: :post %>
    <% end %>
  <% end %>

  <div class="login_box-newusr">
    <p><span>------------</span> 初めての方はこちら <span>------------</span></p>
    <%= link_to "LinkHubアカウントを作成", new_user_registration_path %>
  </div>