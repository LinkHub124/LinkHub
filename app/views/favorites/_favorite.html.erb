<% if theme.favorited_by?(current_user) %>
  <%= link_to theme_favorites_path(user_name: current_user.name, theme_hashid: theme.id), method: :delete, remote: true do %>
    ♥<%= theme.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to theme_favorites_path(user_name: current_user.name, theme_hashid: theme.id), method: :post, remote: true do %>
    ♡<%= theme.favorites.count %> いいね
  <% end %>
<% end %>