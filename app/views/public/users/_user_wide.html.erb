<div class="user-wide-card-content">
  <div class="user-wide-card-content-header">
    <span class="h4">
    <%= link_to user_path(user_name: user.name) do %>
      <%= attachment_image_tag user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size:"30x30", style: "border-radius: 50%;" %>
      <%= user.name %>
    <% end %>
    </span>
  </div>
  <div class="user-wide-card-content-main">
    <p><%= user.introduction %></p>
  </div>
  <div class="ml-auto w-25 mr-3">
    <%= render "public/relationships/follow", user: user %>
  </div>
  
</div>