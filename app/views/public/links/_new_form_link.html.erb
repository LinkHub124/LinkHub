<div class="modal-dialog" role="document">
  <div class="modal-content">
    <%= form_with model:[theme, link_new], url: theme_links_path(user_name: user.name, theme_hashid: theme.hashid), remote: true do |f| %>
      <div class="modal-header">
        <h5 class="modal-title">新規リンク集</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="error_explanation">
        </div>
        <div class="form-group">
          サブタイトル (最大50文字)
          <%= f.text_field :subtitle, class: "form-control", maxlength: "50" %>
        </div>
        <div class="form-group">
          キャプション (最大500文字)
          <%= f.text_area :caption, class: "form-control", maxlength: "500" %>
        </div>
        <table class="table table-striped table-bordered table-hover">
          <tbody>
            <%= f.nested_fields_for :one_links, wrapper_tag: :tr do |q| %>
              <td><%= q.text_field :url, class: 'form-control' %></td>
              <td><%= q.select :rate, [["評価5", 5], ["評価4", 4], ["評価3", 3], ["評価2", 2], ["評価1", 1]], { selected: 3 }, { class: 'form-control' } %></td>
              <td><%= q.remove_nested_fields_link '', class: 'btn btn-danger', role: 'button' do %>&times;<% end %></td>
            <% end %>
          </tbody>
        </table>
        <%= f.add_nested_fields_link :one_links, 'リンク追加', class: 'btn btn-primary', role: 'button' %>
      </div>
      <div class="modal-footer actions">
        <%= f.submit "リンク集作成", class: "btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>
