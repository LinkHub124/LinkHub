<% if @status == 'success' %>
  $("#link-card-<%= @link.id %>").html("<%= j(render("public/links/link_card_edit", link: @link, theme: @link.theme)) %>")
  $("#links-modal").modal("hide")

  <% if @link.theme.links.count < 10 %>
    $("#add-links").html("<%= escape_javascript(link_to 'リンク集追加', new_theme_link_path(user_name: @link.theme.user.name, theme_hashid: @link.theme.hashid), remote: true, class: "btn btn-energy ml-5") %>");
  <% else %>
    $("#add-links").html("");
  <% end %>

<% elsif @status == 'fail' %>
  $("#error_explanation").html("<p style='color: red;'>サブタイトルを入力してください</p>")
<% end %>