<div class="ranking">
  <% user_ranks.each do |user_rank| %>
  <li>
    <%= link_to user_path(user_name: user_rank.user.name), class: "ranking-content" do %>
      <div class="ranking-content p-2">
        <span><%= user_rank.rank %>‰Ωç</span>
        <span><%= attachment_image_tag user_rank.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size:"30x30", style: "border-radius: 50%;" %></span>
        <span><%= user_rank.user.name %></span>
        <span class="pull-right"><%= user_rank.score %></span>
      </div>
    <% end %>
  </li>
  <% end %>
</div>