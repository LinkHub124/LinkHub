<p><h1><%= @user.name %>の投稿一覧ページ</h1></p>
<p><%= link_to "Favorite一覧ページへ" , user_favorites_path(user_name: @user.name) %></p>



<% unless current_user == @user %>
  <% if current_user.following?(@user) %>
    <%= link_to "フォロー外す", user_relationships_path(user_name: @user.name), method: :delete, class: "btn btn-danger" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user_name: @user.name), method: :post, class: "btn btn-primary" %>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @user.name %></td>
      <td><%= link_to "フォロー数", user_followings_path(user_name: @user.name) %>：<%= @user.followings.count %></td>
      <td><%= link_to "フォロワー数", user_followers_path(user_name: @user.name) %>：<%= @user.followers.count %></td>
    </tr>
  </tbody>
</table>



<% @user.themes.each do |theme| %>
  <% if theme.status == 2 or @user == current_user %>
    <div class="card-content">
      <div class="card-content-header">
        <%= link_to user_path(user_name: theme.user.name) do %>
          <%= attachment_image_tag theme.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size:"30x30", style: "border-radius: 50%;" %>
          <%= theme.user.name %>
        <% end %>
      </div>
      <div class="card-content-main"><%= link_to theme.title, theme_path(user_name: theme.user.name, theme_hashid: theme.hashid) %></div>
      <div class="card-content-footer">Like <%= theme.favorites.count %></div>
    </div>
    <% end %>
<% end %>



<% if @user == current_user %>
  <%= link_to 'New Theme', new_theme_path, remote: true, class: "btn btn-success" %>
  <div id="theme-modal" class="modal" tabindex="-1" role="dialog" aria-hidden="true"></div>
<% end %>

