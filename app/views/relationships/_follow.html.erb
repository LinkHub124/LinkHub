<% unless current_user == nil or current_user == user %>
  <div id="follow_buttons_<%= user.id %>">
　　<% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user_name: user.name), method: :delete, remote: true, class: "btn btn-danger" %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user_name: user.name), method: :post, remote: true, class: "btn btn-primary" %>
    <% end %>
　</div>
<% end %>