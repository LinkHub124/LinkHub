<p><h1>テーマ詳細ページ</h1></p>
<p><h1><%= @theme.title %></h1></p>

<p><h1>ユーザー：<%= @user.name %></h1></p>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <% @theme.links.each do |link| %>
        <div class='border border-secondary rounded'>
          <p>SUBTITLE: <%= link.subtitle %></p>
          <p>CAPTION: <%= link.caption %></p>
          <table class="table table-striped table-bordered table-hover">
            <tbody>
              <% link.one_links.each do |one_link| %>
                <tr>
                  <td><a href="<% one_link.url %>"><%= one_link.url %></a></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if @theme.favorited_by?(current_user) %>
    <p>
      <%= link_to theme_favorites_path(@theme), method: :delete do %>
        ♥<%= @theme.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to theme_favorites_path(@theme), method: :post do %>
        ♡<%= @theme.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
