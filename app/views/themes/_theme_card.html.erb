<div class="theme-card-content">
  <div class="theme-card-content-header">
    <%= link_to user_path(user_name: theme.user.name), class:"link" do %>
      <%= attachment_image_tag theme.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size:"30x30", style: "border-radius: 50%;" %>
      <span class="theme-card-content-header-text">
        <%= theme.user.name %>
      </span>
    <% end %>
    <span class="theme-card-content-header-text">
      <%= theme.created_at.strftime('%Y/%m/%d') %>
    </span>
  </div>
  <div class="theme-card-content-main">
    <%= link_to theme.title, theme_path(user_name: theme.user.name, theme_hashid: theme.hashid), class: "theme-card-title link" %>
  </div>
  
  <div class="ml-5 mt-3">
    <% theme.tag_list.each do |tag| %>
      <%= link_to tag_path(tag_name: tag), class: "badge badge-warning" do %>
        <i class="fas fa-tag"></i>
        <%= tag %>
      <% end %>
    <% end %>
  </div>




  <% if theme.post_status == 2 %>
    <div class="mr-3" style="text-align: right;">
      <div class="favorite favorite-right">
        <%= render "favorites/favorite", theme: theme %>
      </div>
    </div>
  <% elsif theme.post_status == 0 %>
    <div class="mr-3" style="text-align: right;">
      <div class="favorite">
        <!--<h4><i class="fas fa-lock"></i></h4>-->
        <h4><%= link_to "", edit_theme_path(user_name: theme.user.name, theme_hashid: theme.hashid), local: true, class: "fas fa-lock" %></h4>
      </div>
    </div>
  <% elsif theme.post_status == 1 %>
    <div class="mr-3" style="text-align: right;">
      <div class="favorite">
        <!--<h4><i class="fas fa-unlock"></i></h4>-->
        <h4><%= link_to "", edit_theme_path(user_name: theme.user.name, theme_hashid: theme.hashid), local: true, class: "fas fa-unlock" %></h4>
      </div>
    </div>
  <% end %>
  
</div>