<div class="card-content">
  <div class="card-content-header">
    <%= link_to user_path(user_name: theme.user.name), class:"link" do %>
      <%= attachment_image_tag theme.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size:"30x30", style: "border-radius: 50%;" %>
      <%= theme.user.name %>
    <% end %>
    <%= theme.created_at.strftime('%Y/%m/%d') %>
  </div>
  <div class="card-content-main"><%= link_to theme.title, theme_path(user_name: theme.user.name, theme_hashid: theme.hashid), class:"link" %></div>
  <div class="card-content-footer">
    â™¡*<%= theme.favorites.count %>

    <% theme.tag_list.each do |tag| %>
      <%= link_to tag, tag_path(tag_name: tag), class:"link" %>
    <% end %>

  </div>
</div>